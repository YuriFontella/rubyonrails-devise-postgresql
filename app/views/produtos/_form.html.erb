<%= form_for @produtos do |f| %>

  <%= f.label :nome %>
  <%= f.text_field :nome %>

  <%= f.label :descricao %>
  <%= f.text_field :descricao %>

  <%= f.label :preco %>
  <%= f.text_field :preco %>

  <%= f.label :validade %>
  <%= f.date_select :validade, start_year: 1987 %>
  
  <%= f.submit 'Salvar' %>
<% end %>