<p><%= link_to 'Novo Produto', new_produto_path %><p>

<table>
  <tr>
    <td><b>Id</b></td>
    <td><b>Nome</b></td>
    <td><b>Descrição</b></td>
    <td><b>Preço</b></td>
    <td><b>Validade</b></td>
    <td>&nbsp;</td>
  </tr>

  <% @produtos.each do |produto| %>
  <tr>
    <td>
    <%= produto.id %>
    </td>
    <td>
    <%= produto.nome %>
    </td>
    <td>
    <%= produto.descricao %>
    </td>
    <td>
    <%= produto.preco %>
    </td>
    <td>
    <%= produto.validade %>
    </td>
    <td>
    <%= link_to 'Detalhes', produto %> |
    <%= link_to 'Editar', edit_produto_path(produto) %>
    <%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %>
    </td>
  </tr>
  <% end %>
</table>